
<h4>Login</h4>

<%= form_for :user, path: '/login', :html => {:class => 'form-horizontal'}  do |f| %>
    <div class='form_error_message'>
        <p><i><%= @error %></i></p>
    </div>

    <%= f.label :'username:' %> <%= f.text_field :username %>
    
    <%= f.label :'password:' %> <%= f.password_field :password %>

    <%= f.submit 'Login', class: "btn blue darken-4"  %>
<% end %> 
<br>

<%= link_to 'Go to Signup Page', new_user_path %>  
